<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    tools:context=".MainActivity">

    <!-- prev_view_btn 이미지 버튼 -->
    <ImageButton
        android:id="@+id/prevViewButton"
        android:contentDescription="이전으로 가기"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/prev_view_btn" />

    <!-- 상단 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/your_logo"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="70dp"
        android:layout_below="@id/logoImageView" >

        <!-- 제품 이름 -->
        <TextView
            android:id="@+id/productNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp" />
        <ImageButton
            android:id="@+id/editButton"
            android:contentDescription="수정"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:layout_marginStart="40dp"
            android:layout_marginTop="105dp"
            android:layout_toRightOf="@id/productNameTextView"
            android:src="@drawable/edit_btn" />

        <!-- 회색 구분선 -->
        <View
            android:id="@+id/separatorView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_below="@id/productNameTextView"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"/>

        <!-- 속성 테이블 -->
        <TableLayout
            android:id="@+id/propertyTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separatorView"
            android:layout_marginTop="10dp">

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="분류"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="5dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">
                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="110dp"
                        android:layout_height="30dp"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:entries="@array/category_array" />

                </androidx.cardview.widget.CardView>

            </TableRow>

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="재생 시간"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="5dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="#FFFFFF"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <Spinner
                            android:id="@+id/UseTimeSpinner"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_centerHorizontal="true"
                            android:background="@android:color/transparent"
                            android:entries="@array/category_array" />

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시간"
                        android:layout_marginStart="0dp"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:layout_marginEnd="10dp" />

                </LinearLayout>

            </TableRow>

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="와트(최대 출력)"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="10dp" />
            </TableRow>

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="배터리 용량"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="10dp" />
            </TableRow>

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="전체 사용 가능 시간"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="-"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginVertical="10dp" />
            </TableRow>

            <!-- 속성 이름과 값 -->
            <TableRow>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="평균 이용 시간"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginVertical="10dp" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.08"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="0dp"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <Spinner
                        android:id="@+id/AverageUseTimeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_below="@id/productImageView"
                        android:layout_centerHorizontal="true"
                        android:background="@android:color/transparent"
                        android:entries="@array/time_array" />

                </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="38dp"
                        android:layout_height="wrap_content"
                        android:text="시간/1일"

                        android:textColor="@android:color/black"
                        android:textSize="10sp" />

                </LinearLayout>
            </TableRow>

        </TableLayout>

        <!-- 빨간색 오류 메시지 -->
        <TextView
            android:id="@+id/errorMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n"
            android:textAlignment="center"
            android:textColor="#FD4343"
            android:layout_below="@id/propertyTable"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <!-- "내 기기에 추가" 버튼 -->
        <Button
            android:id="@+id/addButton"
            style="@style/BackgroundButtonStyle"
            android:layout_width="150dp"
            android:background="@drawable/click_black_box"
            android:layout_height="50dp"
            android:text="추가"
            android:layout_below="@id/errorMessageTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />
    </RelativeLayout>

</RelativeLayout>
