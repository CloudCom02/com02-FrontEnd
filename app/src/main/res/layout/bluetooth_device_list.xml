<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/device_address"
        android:layout_width="140dp"
        android:layout_height="57dp"
        android:text="deviceAddress"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="108dp" />

    <TextView
        android:id="@+id/device_name"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:text="deviceName"
        tools:layout_editor_absoluteX="214dp"
        tools:layout_editor_absoluteY="108dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    tools:context=".MainActivity">

    <!-- prev_view_btn 이미지 버튼 -->
    <ImageButton
        android:id="@+id/prevViewButton"
        android:contentDescription="이전으로 가기"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/prev_view_btn" />

    <!-- 상단 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/your_logo"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/logoImageView"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/paringView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"

            android:layout_marginBottom="10dp"
            android:layout_below="@id/logoImageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/paring"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="페어링 된 디바이스"/>

                <!-- 굵은 구분선 -->
            <View
                android:layout_width="match_parent"
                android:id="@+id/view_bold1"
                android:layout_below="@id/paring"
                android:layout_height="2dp"
                android:background="@android:color/black"/>

            <RelativeLayout
                android:layout_below="@id/view_bold1"
                android:layout_width="500dp"
                android:layout_height="250dp"
                android:layout_marginTop="3dp"
                android:background="#ececec">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp" />
                
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@android:color/darker_gray"/>
                </LinearLayout>


            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/paringView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/connect"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="페어링 된 디바이스"/>

            <!-- 굵은 구분선 -->
            <View
                android:layout_width="match_parent"
                android:id="@+id/view_bold2"
                android:layout_below="@id/connect"
                android:layout_height="2dp"
                android:background="@android:color/black"/>

            <RelativeLayout
                android:layout_below="@id/view_bold2"
                android:layout_width="500dp"
                android:layout_height="250dp"
                android:layout_marginTop="3dp"
                android:background="#ececec">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="@android:color/darker_gray"/>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
        <Button
            android:id="@+id/addButton"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="내 기기에 추가"
            android:textColor="@color/white"
            android:background="@drawable/click_black_box"
            android:layout_marginTop="20dp" />
    </LinearLayout>



</RelativeLayout>

