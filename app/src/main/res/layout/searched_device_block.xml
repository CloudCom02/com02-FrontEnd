<?xml version="1.0" encoding="utf-8"?>
<!-- 상단 블럭 (사진 공간) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/click_white_box"
    android:id="@+id/searched_device_block"
    android:layout_rowWeight="1"
    android:layout_columnWeight="1"
    android:layout_margin="8dp">

    <!-- 이미지 -->
    <ImageView
        android:id="@+id/device_blockImageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="6dp"
        android:scaleType="fitXY"
        android:src="@drawable/product_image" />

    <View
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="0.9dp"
        android:background="@android:color/black" />

    <!-- Name 텍스트 -->
    <TextView
        android:id="@+id/device_blockNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:text="JBL GO 3"
        android:layout_marginTop="3dp"
        android:textSize="15sp"
        android:gravity="center"
        />

    <!-- Type 텍스트 -->
    <TextView
        android:id="@+id/device_blockTypeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:scrollbars="vertical"
        android:text="무선 블루투스 스피커"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_marginTop="1dp"
        android:textColor="@android:color/darker_gray" />
</LinearLayout>