<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/editBtn"
        style="@style/BackgroundButtonStyle"
        android:layout_width="80dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="297dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="450dp"
        android:text="수정 완료" />

    <ImageButton
        android:id="@+id/prevViewButton"
        android:contentDescription="이전으로 가기"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/prev_view_btn" />

    <EditText
        android:id="@+id/deviceName"
        android:layout_width="221dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/propertyTable"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="-125dp"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TableLayout
        android:id="@+id/propertyTable"
        android:layout_width="wrap_content"
        android:layout_height="303dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="162dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="150dp">

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="분류"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/categoryTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="연결타입"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/contentsTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="현재 배터리 잔량"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/nowCapacityTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginVertical="0dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:enabled="true"
                android:textSize="10sp"
                />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="평균 이용 시간"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/averageDaysTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:enabled="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="배터리 용량"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/mAhTxt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="0dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:enabled="true"
                />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="최대 출력"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/maxOutputTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>

        <TableRow
            android:layout_width="270dp"
            android:layout_height="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginEnd="20dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="전체 사용 가능 시간"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="15dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/usingTimeTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:text="-" />
        </TableRow>
    </TableLayout>


    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="506dp"
        android:layout_marginEnd="105dp"
        android:layout_marginBottom="57dp"
        android:background="@color/gray"
        android:text="내 기기에서 삭제"
        android:textColor="#FD4343" />

<!--  변수 저장용  -->
    <TextView
        android:id="@+id/capacityId"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="8sp" />

</RelativeLayout>
