<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    tools:context=".MainActivity">

    <!-- prev_view_btn 이미지 버튼 -->
    <ImageButton
        android:id="@+id/prevViewButton"
        android:contentDescription="이전으로 가기"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/prev_view_btn" />

    <!-- 상단 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/your_logo"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/logoImageView">

        <!-- Bluetooth 버튼 -->
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="50dp"> <!-- 적절한 값을 조절해주세요 -->

            <ImageButton
                android:id="@+id/bluetoothButton"
                android:contentDescription="블루투스"
                style="@style/BackgroundButtonStyle"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bluetooth_btn"
                android:scaleType="fitCenter"
                android:background="@null" />
        </androidx.cardview.widget.CardView>

        <!-- 속성을 표시하는 테이블 -->
        <TableLayout
            android:id="@+id/columnNamesTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <!-- 첫 번째 행 (속성 이름) -->
            <TableRow>

                <!-- 첫 번째 열 (분류) -->
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="분류"
                    android:gravity="center"
                    android:paddingVertical="8dp"/>

                <!-- 두 번째 열 (모델명) -->
                <TextView
                    android:layout_width="79dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:text="모델명" />

                <!-- 세 번째 열 (연결타입/잔량) -->

                <!-- 네 번째 열 (충전 상태) -->

                <TextView
                    android:layout_width="16dp"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:paddingVertical="8dp"
                    android:text="연결타입/잔량" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:paddingVertical="8dp"
                    android:text="  충전 상태" />
            </TableRow>
        </TableLayout>

            <!-- 굵은 구분선 -->
        <View
            android:layout_width="match_parent"
            android:id="@+id/view_bold"
            android:layout_below="@id/columnNamesTable"
            android:layout_height="5dp"
            android:background="@android:color/black"/>

        <RelativeLayout
            android:layout_below="@id/view_bold"
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:background="#e9e9e9"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="12dp">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 첫 번째 행 -->
                    <TableRow>
                        <!-- 첫 번째 열 값 -->
                        <TextView
                            android:layout_width="6dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="음향"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="12sp" />

                        <!-- 두 번째 열 값 -->
                        <TextView
                            android:layout_width="97dp"
                            android:layout_height="50dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/Product_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 세 번째 열 값 -->
                        <TextView
                            android:layout_width="29dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="예상 60%"
                            android:textSize="12sp" />

                        <!-- 네 번째 열 값 -->
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="안전 예상"
                            android:textColor="@android:color/holo_green_dark"
                            android:textSize="12sp" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_below="@id/card1"
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="2dp"
                >

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- 첫 번째 행 -->
                    <TableRow>
                        <!-- 첫 번째 열 값 -->
                        <TextView
                            android:layout_width="6dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="음향"
                            android:textSize="12sp"
                            android:textColor="@android:color/darker_gray"/>

                        <!-- 두 번째 열 값 -->
                        <TextView
                            android:layout_width="97dp"
                            android:layout_height="50dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:padding="8dp"
                            android:text="@string/Product_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 세 번째 열 값 -->
                        <TextView
                            android:layout_width="29dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textSize="12sp"
                            android:text="예상 60%" />

                        <!-- 네 번째 열 값 -->
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="50dp"
                            android:layout_weight="1.5"
                            android:gravity="center"
                            android:padding="8dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/holo_red_dark"
                            android:text="충전 필요" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </RelativeLayout>



</RelativeLayout>


